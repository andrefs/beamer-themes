\defaultfontfeatures{Mapping=tex-text} 
\setmainfont{Myriad Apple Text}
\setmonofont[Scale=0.86]{DejaVu Sans Mono Bold}
%\setsansfont[Scale=0.86]{Andale Mono}
\beamertemplatenavigationsymbolsempty

\newfontfamily\myriad[]{Myriad Pro}
\setbeamerfont{title}{family=\myriad,size={\fontsize{60pt}{60pt}}}
\setbeamerfont{subtitle}{family=\myriad,size={\fontsize{24pt}{24pt}}}
\setbeamerfont{author}{family=\myriad,size={\fontsize{14pt}{14pt}}}
\setbeamerfont{institute}{family=\myriad,size={\fontsize{23pt}{23pt}}}
\setbeamerfont{frametitle}{family=\myriad,size={\fontsize{30pt}{30pt}}}


%%%%%%%%%%%%%%
% Title page %
%%%%%%%%%%%%%%

\defbeamertemplate*{title page}{customized}[1][]
{
	\begin{centering}
	\usebeamerfont{title}\expandafter\uppercase\expandafter{\inserttitle}\par
	\usebeamerfont{subtitle}\expandafter\uppercase\expandafter{\insertsubtitle}\par
	%{\fontsize{60pt}{60pt}\selectfont \inserttitle\par}
	\bigskip
	%\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par
	%\pgfimage[width=.6\textwidth]{img/dzil}\par
	\bigskip
	\usebeamerfont{author}\insertauthor\par
	\medskip
	\usebeamerfont{institute}\expandafter\uppercase\expandafter{\insertinstitute}\par
	%\usebeamerfont{date}\insertdate\par
	%\usebeamercolor[fg]{titlegraphic}\inserttitlegraphic
	\end{centering}
}


%%%%%%%%%%%%%%%
% Frame title %
%%%%%%%%%%%%%%%

\defbeamertemplate*{frametitle}{customized}[1][]
{
	\begin{centering}
	\medskip
	%\usebeamerfont{frametitle}\expandafter\uppercase\expandafter{\insertframetitle}\par
	\usebeamerfont{frametitle}\expandafter{\insertframetitle}\par
	\end{centering}
}

%%%%%%%%%
% Quote %
%%%%%%%%%

\defbeamertemplate*{quote begin}{customized}
{\beamercolorbox[vmode]{quote}}

\defbeamertemplate*{quote end}{customized}
{\endbeamercolorbox}

