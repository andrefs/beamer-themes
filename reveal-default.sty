%%%%%%%%%%%

\definecolor{bgin}{RGB}{85,90,95}
\definecolor{bgout}{RGB}{28,30,32}
\definecolor{textcolor}{HTML}{EEEEEE}

\setbeamercolor{structure}{fg=textcolor}
\setbeamercolor{normal text}{fg=textcolor}
\setbeamercolor{block title}{fg=white,bg=purple}
\setbeamercolor{alerted text}{fg=purple} 


\definecolor{links}{HTML}{13DAEC}
