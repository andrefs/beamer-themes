%%%%%%%%%
% Fonts %
%%%%%%%%%

\defaultfontfeatures{Mapping=tex-text} 
\setmainfont{Lato}
\setmonofont[Scale=0.86]{DejaVu Sans Mono Bold}
%\setsansfont[Scale=0.86]{Andale Mono}
\beamertemplatenavigationsymbolsempty

\newfontfamily\leaguegothic[]{League Gothic}
\setbeamerfont{title}{family=\leaguegothic,size={\fontsize{60pt}{60pt}}}
\setbeamerfont{subtitle}{family=\leaguegothic,size={\fontsize{24pt}{24pt}}}
\setbeamerfont{author}{family=\leaguegothic,size={\fontsize{14pt}{14pt}}}
\setbeamerfont{institute}{family=\leaguegothic,size={\fontsize{23pt}{23pt}}}
\setbeamerfont{frametitle}{family=\leaguegothic,size={\fontsize{30pt}{30pt}}}


%%%%%%%%%%%%%%
% Title page %
%%%%%%%%%%%%%%

\defbeamertemplate*{title page}{customized}[1][]
{
	\definecolor{grey1}{HTML}{CCCCCC}
	\definecolor{grey2}{HTML}{C9C9C9}
	\definecolor{grey3}{HTML}{BBBBBB}
	\definecolor{grey4}{HTML}{B9B9B9}
	\definecolor{grey5}{HTML}{AAAAAA}

	\begin{centering}
  	\begin{tikzpicture}[remember picture,overlay]
	\node[color=grey5] at (0,-0.075) {
		\usebeamerfont{title}\expandafter\uppercase\expandafter{\inserttitle}
	};
	\node[color=grey4] at (0,-0.060) {
		\usebeamerfont{title}\expandafter\uppercase\expandafter{\inserttitle}
	};
	\node[color=grey3] at (0,-0.045) {
		\usebeamerfont{title}\expandafter\uppercase\expandafter{\inserttitle}
	};
	\node[color=grey2] at (0,-0.030) {
	     \usebeamerfont{title}\expandafter\uppercase\expandafter{\inserttitle}
	};
	\node[color=grey1] at (0,-0.015) {
	    \usebeamerfont{title}\expandafter\uppercase\expandafter{\inserttitle}
	};
	\node at (0,0) {
	    \usebeamerfont{title}\expandafter\uppercase\expandafter{\inserttitle}
	};
  	\end{tikzpicture}
	\vspace{2em}
	
	%\usebeamerfont{title}\expandafter\uppercase\expandafter{\inserttitle}\par
	\usebeamerfont{subtitle}\expandafter\uppercase\expandafter{\insertsubtitle}\par
	%{\fontsize{60pt}{60pt}\selectfont \inserttitle\par}
	\bigskip
	%\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par
	%\pgfimage[width=.6\textwidth]{img/dzil}\par
	\bigskip
	\usebeamerfont{author}\insertauthor\par
	\medskip
	\usebeamerfont{institute}\expandafter\uppercase\expandafter{\insertinstitute}\par
	%\usebeamerfont{date}\insertdate\par
	%\usebeamercolor[fg]{titlegraphic}\inserttitlegraphic
	\end{centering}
}


%%%%%%%%%%%%%%%
% Frame title %
%%%%%%%%%%%%%%%

\defbeamertemplate*{frametitle}{customized}[1][]
{
	\begin{centering}
	\medskip
	%\usebeamerfont{frametitle}\expandafter\uppercase\expandafter{\insertframetitle}\par
	\usebeamerfont{frametitle}\expandafter\uppercase\expandafter{\insertframetitle}\par
	\end{centering}
}

